@model IEnumerable<Character>
@{
    ViewData["Title"] = "Character List";
}

@if(TempData["success"] != null)
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    @* <h2>@TempData["success"]</h2> *@

    <script type="text/javascript">
        toastr.success('@TempData["success"]');
    </script>
}
@if (TempData["error"] != null)
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    @* <h2>@TempData["error"]</h2> *@

    <script type="text/javascript">
        toastr.success('@TempData["error"]');
    </script>
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Character List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Character" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Character
            </a>
        </div>
    </div>
    <br /><br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Class
            </th>
            <th>
                Level
            </th>
            <th>
                HP
            </th>
            <th>
                Last Edited
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="20%">
                    @obj.Name
                </td>
                <td width="20%">
                    @obj.Class
                </td>
                <td width="10%">
                    @obj.Level
                </td>
                <td width="10%">
                    @obj.CurrentHP / @obj.MaxHP
                </td>
                <td width="10%">
                    @obj.CreatedDateTime
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                            <a asp-controller="Character" asp-action="Edit" asp-route-id="@obj.Id"
                            class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-controller="Character" asp-action="Delete" asp-route-id="@obj.Id"
                               class="btn btn-danger mx-2"><i class="bi bi-trash3-fill"></i> Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
    </table>
</div>